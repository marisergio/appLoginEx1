<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intervaceUsuario.CadastroActivity">

    <LinearLayout
        android:id="@+id/barra_superior"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:background="@color/blue_black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_voltar"/>

        <TextView
            android:textColor="@color/white"
            android:text="CADASTRAR"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_nome_aluno"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/barra_superior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:hint="NOME"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/edit_login_aluno"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_nome_aluno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:hint="E-MAIL"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/edit_senha_aluno"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_login_aluno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:hint="SENHA"
        android:layout_height="48dp"/>

    <Button

        android:id="@+id/btn_salvar"
        android:layout_width="0dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="SALVAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_senha_aluno" />



</androidx.constraintlayout.widget.ConstraintLayout>